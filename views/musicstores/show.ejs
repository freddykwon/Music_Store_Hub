<% layout('layouts/boilerplate')%>
    <div class="row">
        <div class="col-6">
            <div class="card mb-3">
                <img src="<%=store.image%>" class="card-img-top" alt="Image of <%=store.title%>">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= store.title %>
                    </h5>
                    <p class="card-text">
                        <%= store.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%= store.location %>
                    </li>
                </ul>
                <div class="card-body">
                    <a class="card-link btn btn-warning" href="/musicstores/<%=store._id%>/edit">Edit</a>
                    <form class="d-inline" action="/musicstores/<%=store._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete Store</button>
                    </form>
                </div>
                <div class="card-footer text-muted">2 days ago</div>
            </div>
        </div>
        <div class="col-6">
            <h2>Leave a Review!</h2>
            <form action="/musicstores/<%= store._id%>/reviews" class="mb-3 validated-form" method="POST" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="rating">Rating</label>
                    <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="body">Review:</label>
                    <textarea class="form-control" name="review[body]" id="body" cols="30" rows="10"
                        required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <button class="btn btn-success">Submit</button>
            </form>
            <% for (let review of store.reviews) { %>
                <div class="mb-3 card">
                    <div class="card-body">
                        <h5 class="card-title">Rating:<%= review.rating%>
                        </h5>
                        <p class="card-text">Review:<%= review.body %>
                        </p>
                        <form action="/musicstores/<%= store._id%>/reviews/<%=review._id%>?_method=DELETE"
                            method="POST">
                            <button class="btn btn-small btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
                <% } %>
        </div>
    </div>