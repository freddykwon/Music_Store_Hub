<% layout('/layouts/boilerplate')%>
    <div id="cluster-map"></div>
    <div>
        <a href="/musicstores/new">Add New Store</a>
    </div>
    <% for (let store of musicstores) {%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <%if(store.images.length) {%>
                        <img class="img-fluid" src="<%= store.images[0].url%>" alt="<%= store.title%>">
                        <% } else{%>
                            <img class="img-fluid"
                                src="https://res.cloudinary.com/da2rikqng/image/upload/v1643232071/MusicStoreHub/tysgia4dcssz0dvbdiry.jpg"
                                alt="<%= store.title%>">
                            <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=store.title%>
                        </h5>
                        <p class="card-text">
                            <%= store.description%>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= store.location%>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/musicstores/<%=store._id%>">View <%=store.title%></a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
            <script>
                const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
                const stores = {features: <%- JSON.stringify(musicstores)%>}
            </script>
            <script src="/javascripts/clusterMap.js"></script>