<% layout('/layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">New Music Store</h1>
        <div class="col-6 offset-3">
            <form action="/musicstores" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" name="store[title]" id="title">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" name="store[location]" id="location">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image URL</label>
                    <input class="form-control" type="text" name="store[image]" id="image">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" name="store[description]" id="description"></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add Store</button>
                </div>
            </form>
            <div>
                <a href="/musicstores">All Music Stores</a>
            </div>
        </div>
    </div>