<% layout('/layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">Edit Store</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/musicstores/<%=store._id%>?_method=PUT" method="POST" novalidate class="validated-form"
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" name="store[title]" id="title" value="<%=store.title%>"
                        required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class=" mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" name="store[location]" id="location"
                        value="<%=store.location%> " required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <div class="form-file custom-file">
                        <input type="file" class="form-file-input" id="image" name="image" multiple>
                        <label class="form-file-label" for="image">
                            <span class="form-file-text custom-file-label">Add image(s)...</span>
                            <span class="form-file-button">Browse</span>
                        </label>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" name="store[description]" required
                        id="description"><%=store.description%></textarea>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <%store.images.forEach(function(img, i) { %>
                        <img src="<%=img.thumbnail%>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                        </div>
                        <label for="image-<%=i%>">Delete?</label>
                        <% }) %>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update Store</button>
                </div>
            </form>
            <div>
                <a href="/musicstores/<%=store._id %> ">Back to Music Stores</a>
            </div>
        </div>
    </div>